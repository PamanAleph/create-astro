#!/usr/bin/env sh
. "$(dirname "$0")/_/husky.sh"

# Check if we're on Windows (PowerShell available) or Unix-like system
if command -v powershell >/dev/null 2>&1; then
  # Windows with PowerShell
  powershell -ExecutionPolicy Bypass -File "$(dirname "$0")/pre-commit.ps1"
elif command -v pwsh >/dev/null 2>&1; then
  # PowerShell Core (cross-platform)
  pwsh -ExecutionPolicy Bypass -File "$(dirname "$0")/pre-commit.ps1"
else
  # Unix-like system, run the bash version
  bash "$(dirname "$0")/pre-commit.sh"
fi