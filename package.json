{
    "name": "@pamanaleph/create-astro",
    "version": "1.2.0",
    "description": "ðŸš€ Create a new Astro project with React and TypeScript template. Interactive CLI with customizable options for API routes, cleanup, and more.",
    "type": "module",
    "main": "dist/index.js",
    "bin": {
        "create-astro": "dist/index.js"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "prepublishOnly": "npm run build",
        "bom:check": "node -e \"const fs = require('fs'); const files = ['package.json', 'tsconfig.json', '.releaserc.json', 'src/index.ts']; files.forEach(f => { if (fs.existsSync(f)) { const buf = fs.readFileSync(f); if (buf[0] === 0xEF && buf[1] === 0xBB && buf[2] === 0xBF) { console.error(`BOM detected in ${f}`); process.exit(1); } } });\"",
        "test": "npm run bom:check",
        "prepare": "husky install"
    },
    "keywords": [
        "astro",
        "react",
        "typescript",
        "template",
        "cli",
        "create",
        "scaffold",
        "generator",
        "boilerplate",
        "starter"
    ],
    "author": "PamanAleph",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/PamanAleph/create-astro.git"
    },
    "bugs": {
        "url": "https://github.com/PamanAleph/create-astro/issues"
    },
    "homepage": "https://github.com/PamanAleph/create-astro#readme",
    "usage": {
        "basic": "npx @pamanaleph/create-astro my-project",
        "interactive": "npx @pamanaleph/create-astro",
        "with_options": "npx @pamanaleph/create-astro my-project --api --yes"
    },
    "cli": {
        "description": "Interactive CLI for creating Astro projects with React and TypeScript",
        "usage": "npx @pamanaleph/create-astro [project-name] [options]",
        "arguments": {
            "project-name": "Name of the project directory (optional, will prompt if not provided)"
        },
        "options": {
            "--api": "Include API routes in the project",
            "--no-api": "Exclude API routes from the project",
            "--yes, -y": "Skip all prompts and use default values",
            "--no-install": "Skip dependency installation",
            "--no-cleanup": "Skip cleanup of development files",
            "--ref <branch>": "Use specific git branch/tag (default: main)",
            "--help, -h": "Display help information",
            "--version, -V": "Display version number"
        },
        "environment_variables": {
            "CREATE_ASTRO_API": "Set to '1' to include API routes, '0' to exclude (overrides prompts)",
            "CREATE_ASTRO_YES": "Set to '1' to skip all prompts and use defaults"
        },
        "examples": [
            {
                "command": "npx @pamanaleph/create-astro",
                "description": "Interactive mode - prompts for project name and options"
            },
            {
                "command": "npx @pamanaleph/create-astro my-awesome-app",
                "description": "Create project with name, prompt for API routes"
            },
            {
                "command": "npx @pamanaleph/create-astro my-app --api --yes",
                "description": "Create project with API routes, skip all prompts"
            },
            {
                "command": "npx @pamanaleph/create-astro my-app --no-api --no-cleanup",
                "description": "Create project without API routes, keep development files"
            },
            {
                "command": "npx @pamanaleph/create-astro my-app --ref develop",
                "description": "Create project from develop branch"
            },
            {
                "command": "CREATE_ASTRO_API=1 CREATE_ASTRO_YES=1 npx @pamanaleph/create-astro my-app",
                "description": "Create project using environment variables"
            }
        ]
    },
    "features": [
        "ðŸŽ¯ Interactive CLI with smart prompts",
        "âš¡ Fast project scaffolding from GitHub template",
        "ðŸ”§ Configurable API routes (include/exclude)",
        "ðŸ§¹ Smart cleanup of development files",
        "ðŸ“¦ Automatic dependency installation",
        "ðŸŒ¿ Support for custom git branches/tags",
        "ðŸ”’ NPM-safe project name validation",
        "ðŸŽ¨ Beautiful CLI output with progress indicators",
        "âš™ï¸ Environment variable support",
        "ðŸš€ Zero-config setup for Astro + React + TypeScript"
    ],
    "dependencies": {
        "commander": "^11.0.0",
        "chalk": "^5.3.0",
        "ora": "^7.0.1",
        "prompts": "^2.4.2",
        "tar": "^6.2.0",
        "node-fetch": "^3.3.2"
    },
    "devDependencies": {
        "typescript": "^5.2.2",
        "@types/node": "^20.8.0",
        "@types/prompts": "^2.4.4",
        "@types/tar": "^6.1.5",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/github": "^9.2.1",
        "semantic-release": "^22.0.5",
        "husky": "^8.0.3",
        "lint-staged": "^15.0.2"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "lint-staged": {
        "*.{js,ts,mjs}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md}": [
            "prettier --write"
        ]
    }
}
